<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/border_result">

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_alignParentLeft="true"
        android:background="@color/result_color"

        android:gravity="center"
        android:padding="17dp"
        android:text="1"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_toLeftOf="@id/modify"
        android:layout_toRightOf="@id/num"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingLeft="15dp"
        android:text="에칠헥실메톡시신나메이트"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/modify"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/delete"
        android:background="@color/background_remove"

        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:src="@drawable/result_next_modify" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/background_remove"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:src="@drawable/modification_delete" />
</RelativeLayout>
