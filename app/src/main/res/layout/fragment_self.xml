<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/btn_filtering"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_centerVertical="true"
        android:layout_marginLeft="80dp"

        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/tab3_filtering" />

    <ImageButton
        android:id="@+id/btn_allowance"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_alignTop="@id/btn_filtering"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/btn_filtering"

        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/tab3_allowance"  />
</RelativeLayout>