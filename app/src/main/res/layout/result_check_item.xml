<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/border_result">

    <TextView
        android:id="@+id/num"
        android:layout_width="50dp"
        android:layout_height="match_parent"

        android:layout_alignParentLeft="true"
        android:background="@color/result_color"

        android:layout_centerInParent="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_toLeftOf="@id/yellow"
        android:layout_toRightOf="@id/num"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:text="에칠헥실메톡시신나메이트"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/yellow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/pink"

        android:background="@color/background_remove"
        android:padding="5dp"
        android:src="@drawable/check_yellow" />

    <ImageView
        android:id="@+id/pink"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/blue"

        android:background="@color/background_remove"
        android:padding="5dp"
        android:src="@drawable/check_pink" />

    <ImageView
        android:id="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/choose"

        android:background="@color/background_remove"
        android:padding="5dp"
        android:src="@drawable/check_blue" />

    <ImageButton
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/background_remove"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/result_next_modify" />
</RelativeLayout>
